<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CENTERED BLOCK: image + header + input -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hero illustration (Compose instead of ImageView) -->
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/compose_hero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="AI Coding Assistant"
            android:textColor="@color/colorOnBackground"
            android:textStyle="bold"
            android:textSize="28sp"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/compose_hero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Input container -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayout"
            style="@style/App.TextInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Describe your coding problem..."
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="20dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_attach_image"
            app:endIconTint="@color/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_bar"
                style="@style/App.TextInput.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="6"
                android:padding="0dp"
                android:background="@null" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- BELOW THE CENTERED BLOCK -->

    <!-- Preview container -->
    <RelativeLayout
        android:id="@+id/image_preview_container_home"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/contentWrapper"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp">

        <ImageView
            android:id="@+id/image_preview_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/remove_image_button_home"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_close"
            app:tint="@color/colorOnSurface"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Remove image"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="4dp" />
    </RelativeLayout>

    <!-- Primary CTA (Compose button) -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/image_preview_container_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/compose_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
