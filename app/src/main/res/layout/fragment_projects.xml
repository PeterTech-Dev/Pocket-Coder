<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">>

    <!-- login prompt when not signed in -->
    <TextView
        android:id="@+id/login_prompt_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Please log in to view your projects."
        android:visibility="gone"
        android:textSize="16sp" />

    <!-- main content area -->
    <LinearLayout
        android:id="@+id/projects_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="8dp">

        <!-- Sort spinner -->
        <Spinner
            android:id="@+id/sort_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:spinnerMode="dropdown"
            android:layout_margin="8dp"
            app:tint="@color/colorOnSurface"/>

        <!-- RecyclerView list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/projects_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Floating Action Button for new project -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_new_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_add"
        app:backgroundTint="@color/colorPrimary"
        android:contentDescription="New project" />


</FrameLayout>
