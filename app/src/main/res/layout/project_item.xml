<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- BACKGROUND: overlays we manually resize in code -->
    <FrameLayout
        android:id="@+id/bg_actions"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- LEFT SIDE: delete (anchored to START) -->
        <LinearLayout
            android:id="@+id/bg_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:gravity="start|center_vertical"
            android:paddingStart="24dp"
            android:background="@android:color/holo_red_light">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                app:tint="@color/colorOnSurface" />
        </LinearLayout>

        <!-- RIGHT SIDE: edit (anchored to END) -->
        <LinearLayout
            android:id="@+id/bg_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:gravity="end|center_vertical"
            android:paddingEnd="24dp"
            android:background="@android:color/holo_blue_light">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                app:tint="@color/colorOnSurface" />
        </LinearLayout>

    </FrameLayout>

    <!-- FOREGROUND: your original row (slides left/right) -->
    <LinearLayout
        android:id="@+id/foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/project_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Project Title"
            android:textAppearance="@style/Text.ProjectTitle" />

        <TextView
            android:id="@+id/project_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAppearance="@style/Text.ProjectDate"
            android:layout_marginEnd="16dp" />
    </LinearLayout>

</FrameLayout>
