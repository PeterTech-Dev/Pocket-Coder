<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- res/values/themes.xml -->
    <style name="Theme.AiAssistantCoder" parent="Theme.Material3.Dark.NoActionBar">

        <item name="gradientStart">@color/colorSurfaceVariant</item>
        <item name="gradientCenter">@color/colorSurface</item>
        <item name="gradientEnd">@color/colorBackground</item>

        <!-- Map brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryLight</item>
        <item name="colorOnSecondary">@color/colorOnSurface</item>

        <!-- Background / surfaces -->
        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <item name="colorSurface">@color/colorSurfaceVariant</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnPrimary</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>

        <!-- Typography defaults (optional) -->
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorHint</item>

        <!-- Component default styles (point to STYLES, not colors) -->
        <item name="materialButtonStyle">@style/App.Button.Primary</item>
        <item name="materialButtonOutlinedStyle">@style/App.Button.Outlined</item>
        <item name="textInputStyle">@style/App.TextInput</item>
        <item name="bottomNavigationStyle">@style/App.BottomNav</item>
        <item name="materialCardViewStyle">@style/App.Card</item>

        <!-- Extra roles -->
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurfaceVariant">@color/colorSurface</item>
        <item name="colorOnSurfaceVariant">@color/colorHint</item>
        <item name="colorOutline">@color/colorOutline</item>

        <!-- Bars -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Inputs -->
        <item name="editTextStyle">@style/App.TextInput.EditText</item>

        <!-- Overlays -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.AiAssistantCoder.Dialog</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.AiAssistantCoder.BottomSheet</item>
    </style>
</resources>
