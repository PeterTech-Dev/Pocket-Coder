<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Only for debug builds; lets user-installed certs work too -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>

    <!-- Permit plaintext (HTTP) to your local dev hosts -->
    <domain-config cleartextTrafficPermitted="true">
        <domain>10.0.2.2</domain>            <!-- Android emulator -> host machine -->
        <domain>localhost</domain>
        <domain>127.0.0.1</domain>
        <!-- If you ever run on a real device, add your PCâ€™s LAN IP here: -->
        <!-- <domain>192.168.1.105</domain> -->
    </domain-config>
</network-security-config>
